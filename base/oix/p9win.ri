static int to_color_value(int r, int g, int b, int a)
{
    r = Mul16(r, a) / 256;
    g = Mul16(g, a) / 256;
    b = Mul16(b, a) / 256;
    a /= 256;
    return (r << 24) | (g << 16) | (b << 8) | a;
}

