############################################################################
#
#  ifg() fails if (a) the running version of Icon does not support
#  graphics, or (b) if it is, the graphics system is not running.
#
############################################################################

package ipl.ifg

import io, graphics

procedure ifg()
   local win

   if (&features == "graphics") &
      win := Window.open("canvas=hidden") then {
         close(win)
         return
         }
      
   else fail

end
