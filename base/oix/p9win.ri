int setcanvas(wbp w, char *s)
{
    stringint *e;
    wsp ws = w->window;
    e = stringint_lookup(canvastypes, s);
    if (!e)
        return Failed;

    if (e->i == ws->state)
        return Succeeded;

    /*
     * If we're presently hidden, just open the visible window.
     */
    if (!ws->win) {
        if (e->i != HiddenCanvas) {
            ws->state = e->i;
            if (open_screen_win(ws) == Failed)
                return Failed;
        }
        return Succeeded;
    }

    /*
     * More complex cases, with the window already unhidden.
     */
    switch (e->i) {
        case HiddenCanvas: {
            close_screen_win(ws);
            break;
        }

        case IconicCanvas: {
            if (ws->state == PopupCanvas)
                return Failed;
            fprint(ws->wctl_fd, "hide");
            break;
        }

        case NormalCanvas: {
            if (ws->state == PopupCanvas)
                return Failed;
            fprint(ws->wctl_fd, "unhide");
            break;
        }

        case PopupCanvas:
            return Failed;
    }
    return Succeeded;
}

