#
############################################################################
#
#  Requires:  UNIX
#
############################################################################

package ipl.ftype

import io

procedure ftype(file)
   
   read(ProgStream.open("file " || file, FileOpt.RDONLY)) ? {
      tab(upto('\t'))
      tab(many('\t'))
      return tab(0)
      }

end
