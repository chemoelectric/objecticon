static Image *pattern_image(char *name)
{
    int width, height, i, j, k;
    int bits[MAXXOBJS], v;
    unsigned char data[MAXXOBJS * 8];
    Image *img;
    height = MAXXOBJS;
    if (parsepattern(name, &width, &height, bits) != Succeeded)
        return 0;
    k = 0;
    for(i = 0; i < height; i++) {
        v = bits[i];
        for(j = 0; j < width; j += 8) {
            data[k++] = reversebits(v);
            v >>= 8;
        }
    }

    MemProtect(img = allocimage(display, Rect(0, 0, width, height), GREY1, 1, DNofill));
    loadimage(img, img->r, data, k);
    return img;
}

int setpattern(wbp w, char *name)
{
    wcp wc = w->context;
    int i;

    /*
     * If the pattern starts with a number it is a width , bits encoding
     */
    if (isdigit((unsigned char)name[0])) {
        Image *img = pattern_image(name);
        if (!img)
            return Failed;
        if (wc->pattern)
            unlink_sharedimage(wc->pattern);
        wc->pattern = new_sharedimage(img, name, 0);
    } else {
        if ((i = stringint_str2int(patternsyms, name)) < 0)
            return Failed;
        if (wc->pattern)
            unlink_sharedimage(wc->pattern);
        wc->pattern = link_sharedimage(patterns[i]);
    } 
    return Succeeded;
}

