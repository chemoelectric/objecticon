import gui

class XYAlignList(List)
   public set_align(xa, ya)
      set_selection(case xa || ya of {
         "lt" : 1
         "lc" : 2
         "lb" : 3
         "ct" : 4
         "cc" : 5
         "cb" : 6
         "rt" : 7
         "rc" : 8 
         "rb" : 9 })
      return self
   end

   public get_x_align()
      return case get_selection() of {
         1|2|3 : "l"
         4|5|6 : "c"
         7|8|9 : "r"
      }
   end

   public get_y_align()
      return case get_selection() of {
         1|4|7 : "t"
         2|5|8 : "c"
         3|6|9 : "b"
      }
   end

   public new(a[])
      cast(self,List).new()
      set_selection_list(["(l, t)", "(l, c)", "(l, b)", 
                          "(c, t)", "(c, c)", "(c, b)", 
                          "(r, t)", "(r, c)", "(r, b)"])
      set_fields(a)
      return
   end
end

