import gui


class CanvasMenuButtonUI(CanvasComponentUI)
   public create_canvas_component(canvas)
      local t, t1
      t := CanvasMenuButton()
      t1 := CanvasMenu()
      t1.set_paint_mid(CanvasTextPaint("Edit me"))
      t1.set_paint_right(CanvasImagePaint("image=",Icon.ARROW_RIGHT))
      t.set_menu(t1)
      return t
   end

   public get_category()
      return "Menu"
   end

   public get_name()
      return "MenuButton"
   end

   public get_icon()
      return (
              $include "icon/icn14.icon"
              )
   end
end


