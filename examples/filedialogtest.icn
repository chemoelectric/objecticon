import gui,io

procedure main(a)
   local d
   d :=  FileDialog().
      set_label("A File Dialog").
      set_filters(["*","*.icn","*.c","*.txt"]).
      set_files(["fig.icn","jim.icn","laldy"]).
      set_directories(["/tmp","/home","/home/rparlett"])

   d.set_path(a[1])

   d.show_modal()

   write("d.result=",d.get_result() | "FAILED")
   write("d.directory=",d.get_directory())
   write("d.file=",d.get_file())
end

