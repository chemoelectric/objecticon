    /* Note - could filter out selections to use CLIPBOARD only, ie ^C, not drag */
    MakeInt(SELECTIONREQUEST, &tmp);
    list_put(&ws->listp, &tmp);
    list_put(&ws->listp, &zerodesc);/* req id */
    LitStr("none", &tmp);           /* property */
    list_put(&ws->listp, &tmp);
