package xml

class HtmlElement(Element)
   #
   # Set the name of the element, which is converted to upper case.
   #
   public set_name(s) 
      cast(self,Element).set_name(map(s, &lcase, &ucase))
   end

   #
   # Return the attribute for this element
   #
   public get_attribute(key)
      return cast(self,Element).get_attribute(map(key, &lcase, &ucase))
   end

   #
   # Set an attribute for this element.
   #
   public set_attribute(key, value)
      return cast(self,Element).set_attribute(map(key, &lcase, &ucase), value)
   end
end

