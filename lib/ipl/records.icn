############################################################################
#
#  field(R, i)	returns the name of the ith field of R.
#
#  fieldnum(R, s)  returns the index of the field named s in record R.
#
############################################################################

package ipl.records

# return name of field R[i]
procedure field(R, i)			

   name(R[i]) ? {
      tab(upto('.') + 1)
      return tab(0)
      }

end

# return index of field R.s
procedure fieldnum(R, s)		
   local i

   R := copy(R)
   every i := 1 to *R do
      R[i] := i
   return R[s]
end
