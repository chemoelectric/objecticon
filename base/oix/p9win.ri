void drawstrimage(wbp w, int x, int y, int width, int height,
                  struct palentry *e, unsigned char *s, int len)
{
    wsp ws = w->window;
    wcp wc = w->context;
    int i, j, k;
    uchar *imgdata, *maskdata;
    Image *img, *mask;

    MemProtect(imgdata = malloc(len * 3 * sizeof(uchar)));
    MemProtect(maskdata = malloc(len * sizeof(uchar)));
    
    j = k = 0;
    for (i = 0; i < len; ++i) {
        if (e[s[i]].transpt) {
            imgdata[j++] = 0;
            imgdata[j++] = 0;
            imgdata[j++] = 0;
            maskdata[k++] = 0;
        } else {
            LinearColor c = e[s[i]].clr;
            imgdata[j++] = c.blue;
            imgdata[j++] = c.green;
            imgdata[j++] = c.red;
            maskdata[k++] = 255;
        }
    }

    MemProtect(img = allocimage(display, Rect(0, 0, width, height), RGB24, 1, DNofill));
    loadimage(img, img->r, imgdata, 3*len);

    MemProtect(mask = allocimage(display, Rect(0, 0, width, height), CHAN1(CAlpha, 8), 1, DNofill));
    loadimage(mask, mask->r, maskdata, len);

    if (ws->win)
        impl_draw(wc, ws->win, img, mask, x, y, width, height);
    impl_draw(wc, ws->pix, img, mask, x, y, width, height);
    flushimage(display, 1);
    free(maskdata);
    free(imgdata);
    freeimage(img);
    freeimage(mask);
}

void drawblimage(wbp w, int x, int y, int width, int height,
                int ch, unsigned char *s, int slen)
{
    wsp ws = w->window;
    wcp wc = w->context;
    unsigned int m, msk1, c, ix, iy;
    int i, len, fg, bg;
    uchar *imgdata, *maskdata;
    Image *img, *mask;

    /*print("dim=%d,%d,%d,%d   ch=%d  len=%d\n",x,y,width,height,ch,len);*/

    len = width * height;
    MemProtect(imgdata = malloc(len * 3 * sizeof(uchar)));
    MemProtect(maskdata = malloc(len * sizeof(uchar)));

    fg = wc->fg->rgba;
    bg = wc->bg->rgba;

    m = width % 4;
    if (m == 0)
        msk1 = 8;
    else
        msk1 = 1 << (m - 1);              /* mask for first byte of row */

    ix = width;
    iy = 0;
    m = msk1;
    while (slen--) {
        if (isxdigit((unsigned char)(c = *s++))) {         /* if hexadecimal character */
            if (!isdigit((unsigned char)c))               /* fix bottom 4 bits if necessary */
                c += 9;
            while (m > 0) {                /* set (usually) 4 pixel values */
                --ix;
                i = 3 * (ix + iy * width);
                if (c & m) {
                    imgdata[i++] = (fg >> 8) & 0xff;
                    imgdata[i++] = (fg >> 16) & 0xff;
                    imgdata[i++] = (fg >> 24) & 0xff;
                    maskdata[ix + iy * width] = 255;
                }
                else if (ch != TCH1) {      /* if zeroes aren't transparent */
                    imgdata[i++] = (bg >> 8) & 0xff;
                    imgdata[i++] = (bg >> 16) & 0xff;
                    imgdata[i++] = (bg >> 24) & 0xff;
                    maskdata[ix + iy * width] = 255;
                } else {
                    imgdata[i++] = 0;
                    imgdata[i++] = 0;
                    imgdata[i++] = 0;
                    maskdata[ix + iy * width] = 0;
                }
                m >>= 1;
	    }
            if (ix == 0) {                 /* if end of row */
                ix = width;
                iy++;
                m = msk1;
	    }
            else
                m = 8;
        }
    }
    if (ix > 0) {                         /* pad final row if incomplete */
        while (ix < width) {
            i = 3 * (ix + iy * width);
            imgdata[i++] = (bg >> 8) & 0xff;
            imgdata[i++] = (bg >> 16) & 0xff;
            imgdata[i++] = (bg >> 24) & 0xff;
            maskdata[ix + iy * width] = 255;
            ix++;
        }
    }

    MemProtect(img = allocimage(display, Rect(0, 0, width, height), RGB24, 1, DNofill));
    loadimage(img, img->r, imgdata, 3*len);

    MemProtect(mask = allocimage(display, Rect(0, 0, width, height), CHAN1(CAlpha, 8), 1, DNofill));
    loadimage(mask, mask->r, maskdata, len);

    if (ws->win)
        impl_draw(wc, ws->win, img, mask, x, y, width, height);
    impl_draw(wc, ws->pix, img, mask, x, y, width, height);
    flushimage(display, 1);
    free(maskdata);
    free(imgdata);
    freeimage(img);
    freeimage(mask);
}

