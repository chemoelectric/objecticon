static struct SharedImage *new_sharedimage(Image *i, char *name, int rgba)
{
    struct SharedImage *res;
    GRFX_ALLOC(res, SharedImage);
    res->i = i;
    res->name = salloc(name);
    res->rgba = rgba;
    return res;
}

static struct SharedImage *link_sharedimage(struct SharedImage *x)
{
    ++x->refcount;
    return x;
}

static void unlink_sharedimage(struct SharedImage *x)
{
    --x->refcount;
    if (x->refcount == 0) {
        free(x->name);
        freeimage(x->i);
        free(x);
    }
}

