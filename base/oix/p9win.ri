void drawarc(wbp w, int x, int y, int width, int height, double angle1, double angle2)
{
    int alpha, phi;
    wsp ws = w->window;
    wcp wc = w->context;
    clip(w);
    alpha = -angle1 * 180 / Pi;
    phi = -angle2 * 180 / Pi;
    arcop(ws->pix, 
          Pt(x + width / 2, y + height / 2),
          width / 2, height / 2,
          wc->thick,
          get_draw_img(wc), 
          ZP,
          alpha, phi,
          wc->drawop->i);
    pix_to_win(ws, x, y,  width + 1, height + 1);
    unclip(w);
    flushimage(display, 1);
}

void drawlines(wbp w, struct point *points0, int npoints)
{
    int i, term;
    wsp ws = w->window;
    wcp wc = w->context;
    Point *points = (Point *)points0;
    /* Hack - if line thickness is 1, and we are drawing a horizontal or vertical line, then
     * Endsquare omits the last pixel (eg 0,0->0,1 just draws a single dot at 0,0).
     */
    term = wc->thick == 1 ? Enddisc:Endsquare;

    clip(w);
    poly2(w, points, npoints, term, term);
    unclip(w);
    flushimage(display, 1);
}

