/*
 *  Set the canvas type, either during open (pixmap is null, set a flag)
 *   or change an existing canvas to a different type.
 */
int setcanvas(wbp w, char *s)
{
    stringint *e;
    STDLOCALS(w);
    e = stringint_lookup(canvastypes, s);
    if (!e)
        return Failed;
    if (e->i == ws->state)
        return Succeeded;

    if (ws->pix == (Pixmap)NULL) {
        ws->state = e->i;
        return Succeeded;
    }

    if (ws->win == (Window) NULL) {
        if (e->i != HiddenState) {
            ws->state = e->i;
            wmap(w);
        }
        return Succeeded;
    }

    switch (e->i) {
        case IconicState: {
            if (ws->state == RootState || ws->state == PopupState)
                return Failed;
            XIconifyWindow(ws->display->display, ws->win, ws->display->screen);
            break;
        }

        case NormalState: {
            if (ws->state == RootState || ws->state == PopupState)
                return Failed;
            XMapWindow(stddpy, stdwin);
            synch_net_wm_state(ws, e->i);
            break;
        }

        case PopupState:
        case RootState:
            return Failed;

        case MaximizedState:
        case FullScreenState: {
            if (ws->state == RootState || ws->state == PopupState)
                return Failed;
            XMapWindow(stddpy, stdwin);
            synch_net_wm_state(ws, e->i);
            break;
        }

        case HiddenState: {
            close_screen_win(ws);
            break;
        }
        default:
            syserr("Unexpected canvas state");
    }
    return Succeeded;
}


