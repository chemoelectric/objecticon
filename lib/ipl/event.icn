#  NextEvent(win) overloads the built-in function NextEvent() and produces
#  events using evplay().
#
############################################################################
#
#  Requires:  Version 9 graphics
#
############################################################################
#
#  Links:  evplay
#
############################################################################

package ipl.event

import
   ipl.evplay(evplay), io

procedure NextEvent(win)
   static NextEvent_

   initial {
      NextEvent_ := proc("NextEvent", 0) | stop("*** cannot get built-in NextEvent()")
      }

   evplay(win) | exit()

   return NextEvent_(win)

end
