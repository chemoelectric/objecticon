package ipl.xutils

import
   ipl.graphics(QuitEvents)

procedure Quit(win)
   /win := &window
   while *Pending(win) > 0 do
      if NextEvent(win) === QuitEvents() then
         return win
   fail
end

procedure Done(win)
   /win := &window
   until NextEvent(win) === QuitEvents()
   exit()
end
