static void impl_drawarc(wcp wc, Image *dest, int x, int y, int width, int height, double angle1, double angle2)
{
    int alpha, phi;
    clip(wc, dest);
    x += width/2;
    y += height/2;
    width /= 2;
    height /= 2;
    alpha = -angle1 * 180 / Pi;
    phi = -angle2 * 180 / Pi;
    arcop(dest, 
          Pt(dest->r.min.x + x, dest->r.min.y + y),
          width, height,
          wc->thick,
          wc->fg->i, ZP,
          alpha, phi, 
          wc->drawop->i);
        
    unclip(wc, dest);
}

void drawarc(wbp w, int x, int y, int width, int height, double angle1, double angle2)
{
    wsp ws = w->window;
    wcp wc = w->context;
    if (ws->win)
        impl_drawarc(wc, ws->win, x, y, width, height, angle1, angle2);
    impl_drawarc(wc, ws->pix, x, y, width, height, angle1, angle2);
    flushimage(display, 1);
}

void drawlines(wbp w, XPoint *points, int npoints)
{
    int i;
    wsp ws = w->window;
    wcp wc = w->context;

    clip(wc, ws->pix);
    polyop(ws->pix, points, npoints, Endsquare, Endsquare, wc->thick, wc->fg->i, ZP, wc->drawop->i);
    unclip(wc, ws->pix);

    if (ws->win) {
        for (i = 0; i < npoints; ++i) {
            points[i].x += ws->win->r.min.x;
            points[i].y += ws->win->r.min.y;
        }
        clip(wc, ws->win);
        polyop(ws->win, points, npoints, Endsquare, Endsquare, wc->thick, wc->fg->i, ZP, wc->drawop->i);
        unclip(wc, ws->win);
    }

    flushimage(display, 1);
}

