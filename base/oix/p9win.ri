static void poly2(wbp w, Point *points, int npoints, int end0, int end1)
{
    wsp ws = w->window;
    wcp wc = w->context;
    int x1, y1, x2, y2, i;
    if (npoints == 0)
        return;

    x1 = x2 = points[0].x;
    y1 = y2 = points[0].y;
    for (i = 1; i < npoints; ++i) {
        if (points[i].x < x1)
            x1 = points[i].x;
        if (points[i].y < y1)
            y1 = points[i].y;
        if (points[i].x > x2)
            x2 = points[i].x;
        if (points[i].y > y2)
            y2 = points[i].y;
    }
    polyop(ws->pix, points, npoints, end0, end1, wc->thick, get_draw_img(wc), ZP, wc->drawop->i);
    pix_to_win(ws, x1 - wc->thick, y1 - wc->thick, 1 + x2 - x1 + 2 * wc->thick, 1 + y2 - y1 + 2 * wc->thick);
}

static void line2(wbp w, int x1, int y1, int x2, int y2)
{
    wsp ws = w->window;
    wcp wc = w->context;
    if (x2 < x1) {
        int t = x1 ; x1 = x2; x2 = t;
    }
    if (y2 < y1) {
        int t = y1 ; y1 = y2; y2 = t;
    }
    if (x1 == x2)
        lineop(ws->pix, Pt(x1, y1), Pt(x2, y2 + 1), Endsquare, Endsquare, wc->thick, get_draw_img(wc), ZP, wc->drawop->i);
    else
        lineop(ws->pix, Pt(x1, y1), Pt(x2 + 1, y2), Endsquare, Endsquare, wc->thick, get_draw_img(wc), ZP, wc->drawop->i);
    pix_to_win(ws, x1 - wc->thick, y1 - wc->thick, 1 + x2 - x1 + 2 * wc->thick, 1 + y2 - y1 + 2 * wc->thick);
}

void drawrectangle(wbp w, int x, int y, int width, int height)
{
    wsp ws = w->window;
    wcp wc = w->context;
    if (width <= 2 * (wc->thick + 1) || height <= 2 * (wc->thick + 1))
        fillrectangle(w, x - wc->thick, y - wc->thick, width + 2 * wc->thick, height + 2 * wc->thick);
    else {
        int x2 = x + width - 1;
        int y2 = y + height - 1;
        clip(w);
        line2(w, x - wc->thick, y, x2 + wc->thick, y);
        line2(w, x2, y + wc->thick + 1, x2, y2 - wc->thick - 1);
        line2(w, x, y + wc->thick + 1, x, y2 - wc->thick - 1);
        line2(w, x - wc->thick, y2, x2 + wc->thick, y2);
        unclip(w);
        flushimage(display, 1);
    }
}

void fillpolygon(wbp w, struct point *points0, int npoints)
{
    wsp ws = w->window;
    wcp wc = w->context;
    int x1, y1, x2, y2, i;
    Point *points = (Point *)points0;
    if (npoints == 0)
        return;

    x1 = x2 = points[0].x;
    y1 = y2 = points[0].y;
    for (i = 1; i < npoints; ++i) {
        if (points[i].x < x1)
            x1 = points[i].x;
        if (points[i].y < y1)
            y1 = points[i].y;
        if (points[i].x > x2)
            x2 = points[i].x;
        if (points[i].y > y2)
            y2 = points[i].y;
    }

    clip(w);
    fillpolyop(ws->pix, points, npoints, 0, get_draw_img(wc), ZP, wc->drawop->i);
    pix_to_win(ws, x1, y1, x2 - x1, y2 - y1);
    unclip(w);

    flushimage(display, 1);
}

static Rectangle InnerRect(Image *i, int x, int y, int w, int h)
{
    return Rect(i->r.min.x + x, 
                i->r.min.y + y, 
                i->r.min.x + x + w, 
                i->r.min.y + y + h);
}

static Rectangle MkRect(int x, int y, int w, int h)
{
    return Rect(x, y, x + w, y + h); 
}

static Point InnerPt(Image *i, int x, int y)
{
    return Pt(i->r.min.x + x, 
              i->r.min.y + y);
}

static void clip(wbp w)
{
    wsp ws = w->window;
    wcp wc = w->context;
    if (wc->clipw >= 0) {
        replclipr(ws->pix, 0, MkRect(wc->clipx, wc->clipy, wc->clipw, wc->cliph));
        if (ws->win)
            replclipr(ws->win, 0, InnerRect(ws->win, wc->clipx, wc->clipy, wc->clipw, wc->cliph));
    }
}

static void unclip(wbp w)
{
    wsp ws = w->window;
    wcp wc = w->context;
    if (wc->clipw >= 0) {
        replclipr(ws->pix, 0, max_rect);
        if (ws->win)
            replclipr(ws->win, 0, max_rect);
    }
}

void drawstring(wbp w, int x, int y, char *str, int slen)
{
    wsp ws = w->window;
    wcp wc = w->context;
    clip(w);
    stringnop(ws->pix, 
              Pt(x, y - wc->font->ascent),
              get_draw_img(wc), ZP, wc->font->font, str, slen, wc->drawop->i);
    pix_to_win(ws, 
               x, 
               y - wc->font->ascent, 
               stringnwidth(wc->font->font, str, slen) + wc->font->font->width,   /* Add 1xwidth for italics */
               wc->font->height);
    unclip(w);
    flushimage(display, 1);
}

static Rune *utf8_to_runes(char *str, int nchars)
{
    Rune *r;
    int i, j;
    MemProtect(r = malloc(nchars * sizeof(Rune)));
    for (i = 0; i < nchars; ++i) {
        j = chartorune(&r[i], str);
        str += j;
    }
    return r;
}

void drawutf8(wbp w, int x, int y, char *str, int slen, int nchars)
{
    wsp ws = w->window;
    wcp wc = w->context;
    Rune *r = utf8_to_runes(str, nchars);
    clip(w);
    runestringnop(ws->pix, 
                  Pt(x, y - wc->font->ascent),
                  get_draw_img(wc), ZP, wc->font->font, r, nchars, wc->drawop->i);
    pix_to_win(ws, 
               x, 
               y - wc->font->ascent, 
               runestringnwidth(wc->font->font, r, nchars) + wc->font->font->width,   /* Add 1xwidth for italics */
               wc->font->height);
    unclip(w);
    flushimage(display, 1);
    free(r);
}

