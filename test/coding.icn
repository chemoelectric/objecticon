import lang,io

record rec1()
record rec2(a,b,c)
record rec3(p1,p2,p3)

class One()
   public x,y,z
end

class Two(SelectiveObjectCodec)
   private a,b,c

   private get_template()
      return [["Fred","a"],["Jim","b"],["Mary","c"]]
   end

   public dood()
      write(a,",",b,",",c)
   end

end

class Three()
   public x,y,z

   private object_encode(e)
      e.encode(x)
      e.encode(y)
      e.encode(z)
   end

   private object_decode(e)
      x := e.decode() | fail
      y := e.decode() | fail
      z := e.decode() | fail
      return
   end
end

procedure test(obj)
   local s, x
   s := encode(obj)
   x := decode(s) | stop("Couldn't decode: ", s)
   equals(obj, x) | stop("Failed:",to_string(obj),"-v-",to_string(x))
end

