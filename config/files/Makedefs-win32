.PHONY: all clean test

OI_HOME=@WCONFIG_DIR@
OI_BIN=$(OI_HOME)\bin
OI_LIB=$(OI_HOME)\lib

CC=cl
LD=link
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
RM=rm -f
RMDIR=rm -rf
MKDIR=mkdir
CP=cp

export OI_PATH:=$(OI_LIB)\main;$(OI_LIB)\gui;$(OI_LIB)\xml;$(OI_LIB)\parser;$(OI_LIB)\ipl
export OI_INCL:=$(OI_LIB)\incl
export PATH:=@CONFIG_DIR@/bin:$(PATH)

%.obj: %.c
	cl $(CFLAGS) /c $<

%.obj: %.cpp
	cl $(CFLAGS) /c $<

%.u: %.icn
	oit -c -s $<
