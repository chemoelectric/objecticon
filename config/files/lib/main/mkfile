< ../../mkdefs

LIBSRC=`{ls *.icn}
AUTOSRC=posixconsts.icn ioconsts.icn evmonconsts.icn ucodeconsts.icn

LIBU=${LIBSRC:%.icn=%.u}
AUTOU=${AUTOSRC:%.icn=%.u}

all:V: mkconsts $LIBU $AUTOU

clean:V:
	rm -f mkconsts mkconsts.$O $AUTOSRC *.u packages.txt

$AUTOSRC: 	mkconsts
	./mkconsts

mkconsts:       mkconsts.$O
	$LD -o mkconsts mkconsts.$O ../../base/common/plan9.$O ../../base/common/alloc.$O ../../base/common/mlocal.$O

%.u:Q: %.icn
       test $stem.u -nt $stem.icn || oit -sncW $LIBSRC

posixconsts.u: posixconsts.icn
	oit -csW posixconsts.icn

ioconsts.u: ioconsts.icn
	oit -csW ioconsts.icn

evmonconsts.u: evmonconsts.icn
	oit -csW evmonconsts.icn

ucodeconsts.u: ucodeconsts.icn
	oit -csW ucodeconsts.icn
