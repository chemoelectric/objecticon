static void printcursor(struct Cursor *c)
{
    int i, j, n, k;
    print("clr\n");
    k = 0;
    for (i = 0; i < 32; ++i) {
        n = reversebits(c->clr[i]);
        for (j = 0; j < 8; ++j) {
            if (n & 1) print("*"); else print(" ");
            if (++k % 16 == 0) print("\n");
            n /= 2;
        }
    }

    print("set\n");
    k = 0;
    for (i = 0; i < 32; ++i) {
        n = reversebits(c->set[i]);
        for (j = 0; j < 8; ++j) {
            if (n & 1) print("*"); else print(" ");
            if (++k % 16 == 0) print("\n");
            n /= 2;
        }
    }
}

