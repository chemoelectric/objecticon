#
#  spokes(x, y, radius1, radius2, n, m) draws spokes.
#
############################################################################
#
#  Links:  gobject
#
############################################################################

package ipl.spokes

import
   ipl.gobject(Point),
   util(Math)

procedure spokes(x, y, radius1, radius2, n, m)
   local angle1, incr1

   angle1 := 0.0
   incr1 := 2 * &pi / n

   every 1 to n do {
      suspend rays(x + radius1 * Math.cos(angle1), y + radius1 * Math.sin(angle1),
         radius2, m, angle1)
      angle1 +:= incr1
      }

end

procedure rays(xc, yc, r, m, angle)
   local incr

   incr := 2 * &pi / m 

   every 1 to m do {
      suspend Point(xc, yc)
      suspend Point(xc + r * Math.cos(angle), yc + r * Math.sin(angle))
      suspend Point(xc, yc)
      angle +:= incr
      }

end

