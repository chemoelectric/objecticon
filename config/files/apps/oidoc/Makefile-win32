include ../../Makedefs

COMMONSRC=outputter.icn htmloutputter.icn groffoutputter.icn
COMMONU=$(COMMONSRC:.icn=.u)

PROGS=oidoc
PROGSRC=$(PROGS:=.icn)
PROGEXE=$(PROGS:=.exe)
PROGU=$(PROGSRC:.icn=.u)

all:	$(PROGS)

clean:
	$(RM) *.u packages.txt $(PROGEXE)

$(COMMONU) $(PROGU): %.u: %.icn
	oit -snc $(COMMONSRC) $(PROGSRC)

%:      %.u $(COMMONU)
	oit -o $@ $@.u $(COMMONU)
	cp $@ "$(OI_BIN)"
