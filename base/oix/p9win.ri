Image *make_pattern(unsigned char a[])
{
    Image *img;
    MemProtect(img = allocimage(display, Rect(0, 0, 8, 8), GREY1, 1, DNofill));
    loadimage(img, img->r, a, 8);
    return img;
}

static void init_window_system(void)
{
    int i;
    uchar maskdata[1];
    Dir *fs;

    if (initdraw(0, 0, "objecticon") < 0)
        ffatalerr("Couldn't initialize window system: %r");

    /* Keep mounts private */
    rfork(RFNAMEG); 

    /* Ensure the window mount root exists */
    mkdir(WINDOW_MOUNT_ROOT, 0777);
    fs = dirstat(WINDOW_MOUNT_ROOT);
    if (!fs || !(fs->mode & DMDIR))
        ffatalerr("Couldn't initialize window mount directory: %r");
    free(fs);

    win_fs.tree = alloctree(0, 0, DMDIR | 0777, 0);
    win_fs.create = fscreate;
    postmountsrv(&win_fs, 0, WINDOW_MOUNT_ROOT, MREPL | MCREATE);
    atexit(unmount_win_fs);

    /* Bug workaround which prevents accessing rio's mounted window dir if it is the only
     * entry in the directory */
    mkdir(WINDOW_MOUNT_ROOT "/JUNK", 0777);

    black = new_sharedimage(display->black, "black", 0x000000ff);
    white = new_sharedimage(display->white, "white", 0xffffffff);
    max_rect = Rect(-1073741823, -1073741823, 1073741823, 1073741823);
    startup_time = get_time();
    for (i = 0; i < 16; ++i) {
        patterns[patternsyms[1 + i].i] = new_sharedimage(make_pattern(patbits[patternsyms[1 + i].i]), 
                                                         patternsyms[1 + i].s, 0);
    }

    maskdata[0] = 64;
    MemProtect(mask64 = allocimage(display, Rect(0, 0, 1, 1), CHAN1(CAlpha, 8), 1, DNofill));
    loadimage(mask64, mask64->r, maskdata, 1);

    maskdata[0] = 128;
    MemProtect(mask128 = allocimage(display, Rect(0, 0, 1, 1), CHAN1(CAlpha, 8), 1, DNofill));
    loadimage(mask128, mask128->r, maskdata, 1);

    use_win = (getenv("OIUSEWIN") != 0);
}

static vlong get_time()
{
    int f;
    uchar b[8];
    vlong t;

    memset(b, 0, sizeof b);
    f = open("/dev/bintime", OREAD);
    if(f >= 0) {
        pread(f, b, sizeof(b), 0);
        close(f);
    }
    be2vlong(&t, b);
    return t;
}

static int reversebits(int c)
{
  int rv = 0;
  if (c & 1) rv |= 128;
  if (c & 2) rv |= 64;
  if (c & 4) rv |= 32;
  if (c & 8) rv |= 16;
  if (c & 16) rv |= 8;
  if (c & 32) rv |= 4;
  if (c & 64) rv |= 2;
  if (c & 128) rv |= 1;
  return rv;
}
