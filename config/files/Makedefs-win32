.PHONY: all clean test

OI_HOME=@CONFIG_DIR@
OI_BIN=$(OI_HOME)/bin

CC=cl
LD=link
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
RM=rm -f
RMDIR=rm -rf
MKDIR=mkdir
CP=cp
WOI_HOME=@WCONFIG_DIR@
OI_LIB=$(WOI_HOME)\lib

export OI_PATH:=$(OI_LIB)\main;$(OI_LIB)\gui;$(OI_LIB)\xml;$(OI_LIB)\parser;$(OI_LIB)\ipl
export OI_INCL:=$(OI_LIB)\incl
export PATH:=$(OI_BIN):$(PATH)

%.obj: %.c
	cl $(CFLAGS) /c $<

%.obj: %.cpp
	cl $(CFLAGS) /c $<

%.u: %.icn
	oit -c -s $<
