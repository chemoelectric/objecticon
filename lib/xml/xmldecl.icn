package xml

#
# This class represents the XML declaration in the document.
#
class XmlDecl(Node)
   public
      version,
      encoding, 
      standalone

   #
   # Get the version
   #
   public get_version()
      return version
   end

   #
   # Set the version
   #
   public set_version(version)
      self.version := version
   end

   #
   # Get the encoding
   #
   public get_encoding()
      return encoding
   end

   #
   # Set the encoding
   #
   public set_encoding(encoding)
      self.encoding := encoding
   end

   #
   # Get the standalone attribute
   #
   public get_standalone()
      return standalone
   end

   #
   # Set the standalone attribute
   #
   public set_standalone(standalone)
      self.standalone := standalone
   end

   #
   # Returns "xmldecl"
   #
   public get_type()
      return "xmldecl"
   end

   #
   # Get a string representation of this object.
   #
   public object_to_string()
      return "XmlDecl[" || image(version) || "," || image(encoding) || "," || image(standalone) || "]"
   end

   public new(v, e, s)
      cast(self,Node).new()
      self.version := v
      self.encoding := e
      self.standalone := s
      return
   end
end

