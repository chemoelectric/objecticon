############################################################################
#
#  This procedure produces repeats of an image specified number of times.
#
############################################################################
#
#  Requires:  Version 9 graphics
#
############################################################################
#
#  Links:  tile, wopen
#
############################################################################

package ipl.repeats

import
   graphics(Window),
   io(stop),
   ipl.tile(tile)

# repeat image
procedure repeats(name, i, j)		
   local   win1, win2, width, height
   local  wdim, hdim

   /i := 1			# horizontal repeats
   /j := 1			# vertical repeats

   win1 := Window.open("canvas=hidden", "image=" || name) | fail
   width := win1.attrib("width")
   height := win1.attrib("height")
   hdim := height * i
   wdim := width * j

   win2 := Window.open("canvas=hidden", "width=" || wdim, "height=" || hdim) |
      stop("*** cannot open window for repeat")

   tile(win1, win2)

   win1.close()

   return win2
end
