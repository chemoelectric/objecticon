import gui

class Untitled(Dialog)
   public slider1, label1, slider2,label2,slider3,label3
   public override component_setup()
      self.setup()

      slider1.set_range(0,5)
      slider1.set_value(2)
      slider1.set_ticks(1)
      slider1.set_labels(1)
      slider1.set_snaps(1)
      slider1.set_is_horizontal(&yes)

      slider2.set_range(0,5000)
      slider2.set_value(2500)
      slider2.set_ticks(500)
      slider2.set_labels(1000)
      slider2.set_snaps(500)
      slider2.set_increment_size(500)
      slider2.set_is_horizontal(&yes)

      slider3.set_range(0.0,3.0)
      slider3.set_value(2.0)
      slider3.set_ticks(0.5)
      slider3.set_labels(0.5)
      slider3.set_snaps(0.5)
      slider3.set_increment_size(0.5)
      slider3.set_is_horizontal(&yes)

      slider1.connect(self.on_slider1, Event.VALUE_CHANGED)
      slider2.connect(self.on_slider2, Event.VALUE_CHANGED)
      slider3.connect(self.on_slider3, Event.VALUE_CHANGED)

      # Init the labels
      on_slider1()
      on_slider2()
      on_slider3()
   end

   public on_slider1()
      label1.set_label(slider1.get_value())
   end

   public on_slider2()
      label2.set_label(slider2.get_value())
   end

   public on_slider3()
      label3.set_label(slider3.get_value())
   end

   public override end_dialog()
   end

   public override init_dialog()
   end

   public on_qb(ev)
      dispose()
   end

   public override new()
      Dialog.new()
      return
   end

   private setup()
      local paint_2, layout_1, paint_1, qb, paint, paint_3
      slider1 := Slider().
         set_size(scale(224), scale(100)).
         clear_constraints()
      self.add(slider1)
      paint_1 := TextPaint("Label")
      label1 := Label().
         set_size(scale(88)).
         set_align(Align.C, Align.T).
         clear_constraints().
         set_constraint("eol", &yes).
         set_paint(paint_1)
      self.add(label1)
      slider2 := Slider().
         set_size(scale(224), scale(100)).
         clear_constraints()
      self.add(slider2)
      paint_2 := TextPaint("Label")
      label2 := Label().
         set_size(scale(88)).
         set_align(Align.C, Align.T).
         clear_constraints().
         set_constraint("eol", &yes).
         set_paint(paint_2)
      self.add(label2)
      slider3 := Slider().
         set_size(scale(224), scale(100)).
         clear_constraints()
      self.add(slider3)
      paint_3 := TextPaint("Label")
      label3 := Label().
         set_size(scale(88)).
         set_align(Align.C, Align.T).
         clear_constraints().
         set_constraint("eol", &yes).
         set_paint(paint_3)
      self.add(label3)
      paint := TextPaint("Quit")
      qb := TextButton().
         set_align(Align.C, Align.T).
         clear_constraints().
         connect(self.on_qb, Event.ACTION).
         set_toggles(&no).
         set_paint(paint)
      self.add(qb)
      layout_1 := GridLayout().
         set_extra("cells")
      self.set_layout(layout_1)
   end
end


procedure main()
   local d
   d := Untitled()
   d.show_modal()
end

